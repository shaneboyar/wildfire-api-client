{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["jest"],
    "outDir": "./lib",
    "declaration": true,
    "declarationMap": true,
  },
  "include": ["src/**/*.ts", "cli/**/*.ts", "__tests__/**/*.ts"],
  "exclude": ["node_modules", "__tests__/**/*.ts"]
}
